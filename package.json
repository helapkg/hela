{
  "name": "hela",
  "version": "0.0.0-semantic-release",
  "description": "Powerful & flexible task runner framework in 80 lines, based on [execa][]. Supports shareable configs, a la ESLint",
  "repository": "tunnckoCore/hela",
  "author": "Charlike Mike Reagent (https://i.am.charlike.online)",
  "nspId": "98435a9b-965d-465e-bb57-1209d467e6f1",
  "main": "./src/index.js",
  "scripts": {
    "hela-self": "./src/cli.js",
    "test": "NODE_ENV=test yarn hela-self test",
    "precommit": "yarn hela-self precommit",
    "commit": "yarn hela-self commit",
    "prepublishOnly": "yarn hela-self protect"
  },
  "license": "Apache-2.0",
  "licenseStart": 2017,
  "engines": {
    "node": ">=8",
    "npm": ">=5",
    "yarn": ">=1"
  },
  "files": [
    "src/"
  ],
  "bin": {
    "hela": "./src/cli.js"
  },
  "dependencies": {
    "@tunnckocore/pretty-config": "0.2.2",
    "arrayify": "1.0.0",
    "execa-pro": "1.0.2",
    "mri": "1.1.0",
    "resolve-plugins-sync": "1.1.4"
  },
  "devDependencies": {
    "eslint": "4.15.0",
    "eslint-config-tunnckocore": "0.3.0",
    "hela-config-tunnckocore": "2.2.36",
    "mukla": "0.4.9"
  },
  "keywords": [
    "automation",
    "charlike",
    "cli",
    "command line",
    "configs",
    "es2015",
    "eslint",
    "eslint fix",
    "execa",
    "execute",
    "hela",
    "hooks",
    "lint",
    "npm scripts",
    "precommit",
    "presets",
    "prettier",
    "publish",
    "release",
    "runner",
    "scripts",
    "semantic",
    "semantic release",
    "shareable configs",
    "shareable presets",
    "standard",
    "task",
    "task runner",
    "tasks",
    "testing"
  ],
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "gitcommit",
        "parse-commit-message",
        "execa-pro",
        "hela-config-tunnckocore",
        "new-release"
      ],
      "highlight": "hela-config-tunnckocore"
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "cosmiconfig",
      "execa",
      "execa-pro",
      "hela",
      "semantic-release",
      "hela-config-new-project",
      "hela-config-rollup-build",
      "hela-config-tunnckocore",
      "hela-preset-tunnckocore",
      "rollup"
    ]
  }
}
