{
  "name": "hela",
  "version": "0.0.0-semantic-release",
  "description": "Powerful & futuristic task runner in 80 lines, based on [execa][]. Supports concurrency, presets and awesome extensibility",
  "repository": "tunnckoCore/hela",
  "author": "Charlike Mike Reagent <@tunnckoCore> (https://i.am.charlike.online)",
  "nspId": "6e5fb0cd-6807-4709-b6f2-37f194887691",
  "src": "src/**/*.js",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "license": "MIT",
  "scripts": {
    "start": "./dist/cli.js",
    "test": "yarn start test",
    "precommit": "yarn start precommit",
    "commit": "yarn start commit",
    "hela": "yarn build:cli",
    "build:cli": "rollup -i src/cli.js -o dist/cli.js -f cjs --banner '#!/usr/bin/env node'",
    "postbuild:cli": "chmod +x dist/cli.js"
  },
  "engines": {
    "node": ">=6",
    "npm": ">=5",
    "yarn": ">=1"
  },
  "files": [
    "dist/"
  ],
  "bin": {
    "hela": "./dist/cli.js"
  },
  "dependencies": {
    "arrify": "^1.0.1",
    "execa": "^0.8.0",
    "js-yaml": "^3.10.0",
    "mri": "^1.1.0",
    "p-map-series": "^1.0.0",
    "pify": "^3.0.0"
  },
  "devDependencies": {
    "eslint-config-standard-tunnckocore": "^1.0.7",
    "hela-preset-tunnckocore": "^0.4.3",
    "husky": "^0.14.3",
    "mukla": "^0.4.9",
    "semantic-release": "^7.0.2"
  },
  "keywords": [
    "charlike",
    "cli",
    "command line",
    "es2015",
    "eslint",
    "eslint fix",
    "hela",
    "hooks",
    "lint",
    "precommit",
    "prettier",
    "publish",
    "release",
    "runner",
    "semantic",
    "semantic release",
    "standard",
    "task",
    "task runner",
    "tasks",
    "testing"
  ],
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "dush",
        "p-map-series",
        "execa",
        "hela-preset-tunnckocore",
        "mri"
      ],
      "highlight": "hela-preset-tunnckocore"
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "charlike-cli",
      "execa"
    ]
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
